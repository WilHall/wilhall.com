<% content_for :title do %>
  Wil Hall - Studio
<% end %>
<% content_for :logo do %>
  <%= render 'shared/plume_and_pith_logo' %>
<% end %>
<div class="flex flex-wrap font-medium text-slate-700 bg-white rounded-md shadow-lg border border-slate-200 py-2 px-5">
  <input name="tabs" tabindex="1" type="radio" id="#guide" class="absolute cursor-pointer w-0 opacity-0"/>
  <label for="#guide" class="cursor-pointer inline-flex items-center justify-center gap-2 p-4 font-bold border-b-2 border-transparent rounded-t-lg hover:text-slate-600 hover:border-slate-300 border-blue-600">
    <i class="block fa-solid fa-book text-slate-700 text-xl"></i>
    Guide
  </label>
  <div class="panel my-5">
    <div class="prose mx-auto">
      <%= render partial: "guide", locals: local_assigns %>
    </div>
  </div>
  <input name="tabs" tabindex="1" type="radio" id="#glazes" class="absolute cursor-pointer w-0 opacity-0"/>
  <label for="#glazes" class="cursor-pointer inline-flex items-center justify-center gap-2 p-4 font-bold border-b-2 border-transparent rounded-t-lg hover:text-slate-600 hover:border-slate-300 border-blue-600">
    <i class="block fa-solid fa-swatchbook text-slate-700 text-xl"></i>
    Glazes
  </label>
  <div class="panel my-5">
    <%= form_with(url: studio_path, method: :get, data: { controller: "filter" }, class: "flex gap-3 w-full items-end flex-wrap") do %>
      <div class="flex flex-col">
        <%= label_tag :base_glaze, "Base Glaze", class: "font-bold" %>
        <%= select_tag :base_glaze,
                            options_for_select(@base_glaze_options,
                                                selected: @selected_base_glaze),
                            prompt: "Any",
                            class: 'rounded-lg border-slate-300',
                            data: { action: "change->filter#submit" } %>
      </div>
      <div class="flex flex-col">
        <%= label_tag :primary_color, "Primary Color", class: "font-bold" %>
        <%= select_tag :primary_color,
                            options_for_select(@primary_color_options,
                                                selected: @selected_primary_color),
                            prompt: "Any",
                            class: 'rounded-lg border-slate-300',
                            data: { action: "change->filter#submit" } %>
      </div>
    <% end %>
    <% if (@glazes + @glaze_combinations).empty? %>
      <div class="text-center text-xl font-bold w-full my-5">No glazes found</div>
    <% else %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 my-5">
        <% (@glazes + @glaze_combinations).each do |glaze| %>
          <div class="bg-white border border-slate-200 rounded-md">
            <img class="rounded-t-md" src="<%= url_for(glaze.test_tile_photo) %>" alt=""/>
            <div class="p-5">
              <h2 class="flex items-center gap-3 text-black text-2xl font-bold tracking-tight">
                <%= glaze.name %>
              </h2>
              <span class="text-secondary font-bold">
                <%= glaze.canonical_identifier %>
              </span>
              <div class="flex gap-3 items-center">
                <span class="flex gap-1 items-center">
                  <i class="block fa-solid fa-palette text-slate-700 text-lg"></i>
                  <%= glaze.primary_color.titleize %>
                </span>
                <span class="flex gap-1 items-center">
                  <i class="block fa-solid fa-fire text-slate-700 text-lg"></i>
                  <%= glaze.cone_range %>
                </span>
                <span class="flex gap-1 items-center">
                  <i class="block fa-solid fa-utensils text-slate-700 text-lg"></i>
                  <%= glaze.food_safe ? "Yes" : "No" %>
                </span>
              </div>
              <p class="my-3 font-normal text-sm text-slate-700"><%= glaze.description %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <input name="tabs" tabindex="1" type="radio" id="#resources" class="absolute cursor-pointer w-0 opacity-0"/>
  <label for="#resources" class="cursor-pointer inline-flex items-center justify-center gap-2 p-4 font-bold border-b-2 border-transparent rounded-t-lg hover:text-slate-600 hover:border-slate-300 border-blue-600">
    <i class="block fa-solid fa-photo-film text-slate-700 text-xl"></i>
    Resources
  </label>
  <div class="panel my-5">
    <div class="w-full flex flex-col gap-4 md:flex-row justify-between">
      <div class="flex-1">
        <div class="prose">
          <h2>Beginner Throwing Videos:</h2>
          <ol>
            <li><a href="https://www.youtube.com/watch?v=-YCGK33c0xs">How to Center Clay</a></li>
            <li><a href="https://www.youtube.com/watch?v=69dMLpXosSk">How to Cone Clay on the Wheel</a></li>
            <li><a href="https://www.youtube.com/watch?v=HF5IAJ0x2g0">How to Open Up Centered Clay</a></li>
            <li><a href="https://www.youtube.com/watch?v=VM8SJZ4lNRY">How to Pull Up The Walls of a Pot</a></li>
            <li><a href="https://www.youtube.com/watch?v=05CsVxlULo0">How to Lift Pots Off the Wheel</a></li>
          </ol>
          <h2>Intermediate Throwing Videos:</h2>
          <ol>
            <li><a href="https://www.youtube.com/watch?v=6RdfuvSH7UM">How to Center Larger Lumps of Clay</a></li>
            <li><a href="https://www.youtube.com/watch?v=w-k0mkO4qGQ">Discussing Rims &amp; Bottoms</a></li>
            <li><a href="https://www.youtube.com/watch?v=cMWwkrODJRc">5 Tips &amp; Tricks for Centering Clay</a></li>
            <li><a href="https://www.youtube.com/watch?v=Ec9WcarGSTo">5 Tips &amp; Tricks for Throwing</a></li>
            <li><a href="https://www.youtube.com/watch?v=xPgPKRuFia4">How to Throw a Pottery Bowl</a></li>
            <li><a href="https://www.youtube.com/watch?v=nV3a94HlP6g">How to Make Teapots 101</a></li>
            <li><a href="https://www.youtube.com/watch?v=j_rRY_8ObXs">How to make Pouring Vessels</a></li>
            <li><a href="https://www.youtube.com/watch?v=syMSaMygYC4">One Trick to Help Throwing Shallow Bowls</a></li>
          </ol>
        </div>
      </div>
      <div class="flex-1">
        <div class="prose">
          <h2>Beginner Trimming Videos</h2>
          <ol>
            <li><a href="https://www.youtube.com/watch?v=3lBnDWya0r0">The Definitive Tap Centering Tutorial</a></li>
            <li><a href="https://www.youtube.com/watch?v=PiHYWP7UB4w">Trimming Pottery 101</a></li>
            <li><a href="https://www.youtube.com/watch?v=XhlJLVL-Zg8">How to Trim Pots - Tips &amp; Tricks</a></li>
          </ol>
          <h2>Beginner Glazing &amp; Decorating:</h2>
          <ol>
            <li><a href="https://www.youtube.com/watch?v=7oYCoBMVXLU">How to Glaze and Tidy Pots</a></li>
            <li><a href="https://ceramicartsnetwork.org/pottery-making-illustrated/pottery-making-illustrated-article/8-Ways-to-Apply-Glaze">8 Ways to Apply Glaze</a></li>
            <li><a href="https://www.kness.fr/en/underglazes/">A Beginner's Guide to Underglaze</a></li>
            <li><a href="https://www.youtube.com/watch?v=03I49swV6EA">How to Use Wax Resist</a></li>
            <li><a href="https://ceramicartsnetwork.org/daily/article/how-to-set-yourself-up-for-successful-clay-carving">How to Set Yourself Up for Successful Clay Carving</a></li>
            <li><a href="https://www.youtube.com/watch?v=bh8QQ7EqiBE">10 Tips for Carving Pottery</a></li>
          </ol>
          <h2>Miscellaneous</h2>
          <ul>
            <li><a href="https://www.oldforgecreations.co.uk/blog/clay-shrinkage">Clay Shrinkage</a></li>
            <li><a href="https://www.oldforgecreations.co.uk/blog/mug-handles">How To Make Comfortable Mug Handles</a></li>
            <li><a href="https://www.oldforgecreations.co.uk/blog/how-to-stamp-clay">How To Stamp Clay</a></li>
            <li><a href="https://www.oldforgecreations.co.uk/blog/silicosis-what-it-is-and-how-to-avoid-it">Silicosis - What it is and how to avoid it</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  (function () {
      const selectTargetedTab = () => {
          const targetTab = document.querySelector(`input[name="tabs"][id="${window.location.hash}"]`)
          if (targetTab) {
              targetTab.checked = true;
          }
      }

      window.addEventListener("hashchange", selectTargetedTab);

      if (window.location.hash.length <= 1) {
          document.querySelector(`input[name="tabs"][id="#guide"]`).click()
      }

      document.querySelectorAll('input[name="tabs"]').forEach((elem) => {
          elem.addEventListener('click', (event) => {
              history.replaceState({}, '', elem.getAttribute('id'));
              selectTargetedTab();
          })
      });

      selectTargetedTab()
  })();
</script>
